{
  "manifest_version": 3,
  "name": "Salvadorii",
  "version": "1.0.0",
  "description": "Documentation Assitant Powered by LLM",
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "tabs", "scripting", "activeTab", "storage", "unlimitedStorage", "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "onnxruntime/*.wasm", "transformers/**"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}